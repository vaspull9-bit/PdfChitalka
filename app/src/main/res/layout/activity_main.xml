<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Компактный Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="4dp">

            <!-- Название приложения (компактное) -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Кнопка поиска -->
            <ImageButton
                android:id="@+id/btnSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Поиск"
                android:src="@drawable/ic_baseline_search_24"
                app:tint="@android:color/white" />

            <!-- Индикатор страниц -->
            <TextView
                android:id="@+id/pageIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="1/1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <!-- Кнопки навигации - КОМПАКТНЫЕ -->
            <ImageButton
                android:id="@+id/btnFirstPage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="В начало"
                android:src="@drawable/ic_first_page"
                app:tint="@android:color/white"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnPrevPage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Назад"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:tint="@android:color/white"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnNextPage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Вперед"
                android:src="@drawable/ic_baseline_arrow_forward_24"
                app:tint="@android:color/white"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btnLastPage"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="В конец"
                android:src="@drawable/ic_last_page"
                app:tint="@android:color/white"
                android:visibility="visible" />

            <!-- Гибкое пространство -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Кнопка меню (теперь видна!) -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Меню"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@android:color/white" />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- Контейнер для PDF просмотра -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playerPanel"
        android:layout_below="@+id/toolbar">

        <!-- PDF ImageView -->
        <ImageView
            android:id="@+id/pdfImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <!-- Прогресс-бар -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Текстовое представление для поиска -->
    <ScrollView
        android:id="@+id/textScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playerPanel"
        android:layout_below="@+id/toolbar"
        android:visibility="gone">

        <TextView
            android:id="@+id/pdfTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.3"
            android:padding="16dp"
            android:textColor="@android:color/black"/>
    </ScrollView>

    <!-- Панель результатов поиска -->
    <LinearLayout
        android:id="@+id/searchPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:background="#CCFFFFFF"
        android:padding="8dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/searchResultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Результаты поиска"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPrevSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_prev"
                android:contentDescription="Предыдущий результат"
                app:tint="#FF000000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/searchPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/0"
                    android:textSize="12sp"
                    android:textColor="#FF000000"/>

                <TextView
                    android:id="@+id/searchPageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Страница: 0"
                    android:textSize="10sp"
                    android:textColor="#FF666666"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="2dp"
                    android:background="?attr/selectableItemBackground"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnNextSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_next"
                android:contentDescription="Следующий результат"
                app:tint="#FF000000"/>

            <ImageButton
                android:id="@+id/btnCloseSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginHorizontal="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:contentDescription="Закрыть поиск"
                app:tint="#FF000000"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Панель управления озвучкой -->
    <LinearLayout
        android:id="@+id/playerPanel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#CC000000"
        android:paddingHorizontal="4dp"
        android:paddingVertical="6dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center">

        <!-- Компактные кнопки плеера -->
        <ImageButton
            android:id="@+id/btnRewindToStart"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rewind_to_start"
            android:contentDescription="В начало"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnRewindBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rewind_back"
            android:contentDescription="Назад"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_pause"
            android:contentDescription="Пауза"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_stop"
            android:contentDescription="Стоп"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play"
            android:contentDescription="Воспроизвести"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnRewindForward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rewind_forward"
            android:contentDescription="Вперед"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnRewindToEnd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="2dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rewind_to_end"
            android:contentDescription="В конец"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnTtsSettings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_settings"
            android:contentDescription="Настройки озвучки"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Кнопки управления зумом -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/playerPanel"
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:background="#80000000"
        android:padding="2dp"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/btnZoomIn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_zoom_in"
            android:contentDescription="Увеличить"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnZoomOut"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_zoom_out"
            android:contentDescription="Уменьшить"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/btnResetZoom"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_zoom_reset"
            android:contentDescription="Сбросить зум"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white" />

    </LinearLayout>

</RelativeLayout>